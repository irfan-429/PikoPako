<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroolView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:id="@+id/titlyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="horizontal"
                android:padding="5dp">

                <com.pikopako.AppUtill.CustomTextViewBold
                    android:id="@+id/Txt_food_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="0dp"
                    android:singleLine="true"
                    android:text="Vegetable Burger Pizza"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_weight="1">


                    <com.pikopako.AppUtill.CustomTextViewBold
                        android:id="@+id/Txt_food_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="4dp"
                        android:text="$7hhhf"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>




                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/add_layout"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="end|right|center_horizontal"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/login_drawable"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:padding="5dp"
                    android:visibility="visible">

                    <com.pikopako.AppUtill.CustomTextViewBold
                        android:id="@+id/tv_add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/add"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <com.pikopako.AppUtill.CustomTextViewBold
                        android:id="@+id/tv_closed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/closed"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/add_quantity_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:minWidth="65dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginEnd="3dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0.98"
                    android:background="@drawable/custom_border"
                    android:gravity="center_horizontal|center_vertical"
                    android:padding="2dp"
                    android:visibility="gone">


                    <com.pikopako.AppUtill.CustomTextViewNormal
                        android:id="@+id/txt_Less"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|center_horizontal|center"
                        android:paddingLeft="10dp"
                        android:paddingRight="3dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginLeft="5dp"
                        android:text="-"
                        android:textColor="@color/colorPrimary"
                        android:textSize="24sp" />

                    <com.pikopako.AppUtill.CustomTextViewBold
                        android:id="@+id/txtTotalProductQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="1"
                        android:textColor="@color/colorPrimary"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <com.pikopako.AppUtill.CustomTextViewNormal
                        android:id="@+id/txt_max"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|center_horizontal|center"
                        android:paddingLeft="1dp"
                        android:paddingRight="2dp"
                        android:text="+"
                        android:layout_marginEnd="15dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="24sp" />


                </LinearLayout>

            </LinearLayout>



        <LinearLayout
            android:id="@+id/recyllt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titlyt"
            android:background="@color/lighter_gray"
            android:visibility="gone"
            android:orientation="vertical">




                <LinearLayout
                    android:id="@+id/lyt_make"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.pikopako.AppUtill.CustomTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="@string/make_your_own"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/Iv_opentoppings"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/arrowdown"/>

                    <ImageView
                        android:id="@+id/Iv_closetoppings"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="20dp"
                        android:visibility="gone"
                        android:src="@drawable/up_arrow"/>

                </LinearLayout>



            <LinearLayout
                android:id="@+id/lyt_toppings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <com.pikopako.AppUtill.CustomTextViewNormal
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="5dp"
                    android:layout_weight="1"
                    android:text="@string/toppings"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <!--<ImageView-->
                <!--android:layout_width="20dp"-->
                <!--android:layout_height="20dp"-->
                <!--android:layout_gravity="center|end|right"-->
                <!--android:layout_weight="1"-->
                <!--android:src="@drawable/arrowdown" />-->


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleviewfood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:nestedScrollingEnabled="false"
                android:orientation="vertical"
                android:padding="5dp" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ingrlyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recyllt"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:padding="5dp"
            android:orientation="vertical">

            <com.pikopako.AppUtill.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ingredients"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.pikopako.AppUtill.CustomTextViewNormal
                android:id="@+id/txt_ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ingrlyt"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:padding="5dp"
            android:orientation="vertical">

            <com.pikopako.AppUtill.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.pikopako.AppUtill.CustomTextViewNormal
                android:id="@+id/txt_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>


    </RelativeLayout>

</androidx.core.widget.NestedScrollView>