<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rrrl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >




    <RelativeLayout
        android:layout_below="@+id/hh"
        android:id="@+id/mainbView"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        style="@style/RelativeLayout">
        <LinearLayout
            android:layout_margin="5dp"
            android:id="@+id/lytImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_restaurant"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/profileicon"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_toRightOf="@+id/lytImage"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.pikopako.AppUtill.CustomTextViewBold
                    android:id="@+id/txt_restroname"
                    android:layout_width="140dp"
                    android:text="Dreamer's Cafe"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:maxLength="25"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/location_marker" />

                    <com.pikopako.AppUtill.CustomTextViewNormal
                        android:id="@+id/txt_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Anaj Man" />
                </LinearLayout>

                <!--<com.pikopako.AppUtill.CustomTextViewBold-->
                    <!--android:id="@+id/txt_status"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="Open"-->
                    <!--android:textColor="@android:color/holo_green_dark"-->
                    <!--android:textSize="16sp"/>-->
            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lllt"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainbView"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.pikopako.AppUtill.CustomTextViewBold
            android:id="@+id/txt_orderid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PIKOPAKO #8"/>


    </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:weightSum="3"
            android:orientation="horizontal">


            <com.pikopako.AppUtill.CustomTextViewBold
                android:id="@+id/txt_charges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$1490.00"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"/>


            <com.pikopako.AppUtill.CustomTextViewBold
                android:id="@+id/txt_paymentmode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paid via Cash"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textColor="@color/black"/>


            <com.pikopako.AppUtill.CustomTextViewBold
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="0dp"
                android:textColor="@color/holo_green_dark"/>

        </LinearLayout>


        <com.pikopako.AppUtill.CustomTextViewNormal
            android:id="@+id/txt_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="dfsgdfgfgddfg"/>




        <Button
            android:textAllCaps="true"
            android:id="@+id/btn_reorder"
            android:layout_marginTop="30dp"
            android:text="@string/reorder"
            android:textSize="@dimen/default_button_size"
            android:layout_margin="5dp"
            android:background="@drawable/login_drawable"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <View
        android:layout_margin="5dp"
        android:layout_below="@id/lllt"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lighter_gray"
        android:layout_marginTop="5dp"
        />
</RelativeLayout>