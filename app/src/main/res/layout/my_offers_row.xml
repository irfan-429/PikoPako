<RelativeLayout android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/topp"
    tools:context=".Activity.MainActivity"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        style="@style/cardLayoutStyle"
        android:layout_margin="2dp"
        card_view:cardBackgroundColor="#fff"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:id="@+id/mainView"
            android:layout_marginBottom="5dp"
            style="@style/RelativeLayout">

            <LinearLayout
                android:layout_toRightOf="@+id/lytImage"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.pikopako.AppUtill.CustomTextViewBold
                        android:id="@+id/txt_couponcode"
                        android:layout_width="wrap_content"
                        android:text="XGHJGdddddd"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:maxLength="25"
                        android:singleLine="true"
                        android:textColor="@android:color/holo_green_dark"
                        android:layout_height="wrap_content" />

                    <com.pikopako.AppUtill.CustomTextViewBold
                        android:id="@+id/txt_percentage"
                        android:layout_marginEnd="6dp"
                        android:gravity="end"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="@color/colorPrimary"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:text="75 %"
                        android:layout_width="match_parent"
                        android:layout_height="35dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >


                        <com.pikopako.AppUtill.CustomTextViewNormal
                            android:id="@+id/txt_food_category"
                            android:layout_width="wrap_content"
                            android:text="@string/valid_till"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:maxLength="25"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content" />


                        <com.pikopako.AppUtill.CustomTextViewNormal
                            android:id="@+id/txt_expiry_Date"
                            android:layout_width="wrap_content"
                            android:text="26-.5-2.20"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:maxLength="25"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <com.pikopako.AppUtill.CustomTextViewNormal
                        android:id="@+id/txt_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/min_order"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:gravity="right|end"/>


                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>