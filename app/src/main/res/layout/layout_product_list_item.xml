<RelativeLayout android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Activity.MainActivity"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        style="@style/cardLayoutStyle"
        android:layout_margin="2dp"
        card_view:cardBackgroundColor="#fff"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:id="@+id/mainView"
            android:layout_marginBottom="5dp"
            style="@style/RelativeLayout">
            <LinearLayout
                android:layout_margin="5dp"
                android:id="@+id/lytImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgProduct"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/profileicon"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_toRightOf="@+id/lytImage"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <com.pikopako.AppUtill.CustomTextViewBold
                    android:id="@+id/txt_cafename"
                    android:layout_width="140dp"
                    android:text="Dreamer's Cafe"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:maxLength="25"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content" />

                    <com.pikopako.AppUtill.CustomTextViewNormal
                    android:id="@+id/txt_cafestatus"
                    android:layout_marginEnd="6dp"
                    android:gravity="end"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@android:color/holo_green_dark"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:text="@string/open"
                    android:layout_width="match_parent"
                    android:layout_height="35dp" />
                </LinearLayout>

                <com.pikopako.AppUtill.CustomTextViewNormal
                    android:id="@+id/txt_cafesublist"
                    android:layout_width="wrap_content"
                    android:text="Sweet BBQ Burger"
                    android:singleLine="true"
                    android:textColor="@color/darker_gray"
                    android:layout_height="wrap_content" />


               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="3dp">

              <ImageView
                  android:layout_width="22dp"
                  android:layout_height="22dp"
                  android:src="@drawable/star"
                  />

                    <com.pikopako.AppUtill.CustomTextViewNormal
                        android:id="@+id/txt_caferating"
                    android:layout_width="wrap_content"
                    android:text="4.1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />

                   <View android:id="@+id/view"
                       android:layout_marginLeft="5dp"
                       android:layout_marginRight="5dp"
                       android:layout_width="1dp"
                       android:layout_height="15dp"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="4dp"
                       android:background="@color/darker_gray"/>

                   <com.pikopako.AppUtill.CustomTextViewNormal
                       android:id="@+id/txt_cafedeleiverytime"
                       android:layout_width="wrap_content"
                       android:text="46 MIN"
                       android:textSize="14sp"
                       android:textStyle="bold"
                       android:textColor="@color/black"
                       android:layout_height="wrap_content" />

                   <View android:id="@+id/view1"
                       android:layout_marginLeft="5dp"
                       android:layout_marginRight="5dp"
                       android:layout_width="1dp"
                       android:layout_height="15dp"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="4dp"
                       android:background="@color/darker_gray"/>

                   <com.pikopako.AppUtill.CustomTextViewNormal
                       android:id="@+id/txt_minorder"
                       android:layout_width="match_parent"
                       android:text="$15 Min order"
                       android:textSize="14sp"
                       android:textStyle="bold"
                       android:maxLines="1"
                       android:textColor="@color/black"
                       android:layout_height="wrap_content" />

               </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>